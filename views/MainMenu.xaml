<Page
    x:Class="Battleships.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

<Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ShowGridLines="False">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition MaxWidth="300" />
        <ColumnDefinition Width="*"  />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition MaxHeight="75" />
        <RowDefinition MaxHeight="25" />
        <RowDefinition MaxHeight="75" />
        <RowDefinition Height="*" />

    </Grid.RowDefinitions>
    <Border Margin="10" Background="White"  Grid.Column="1" Grid.Row="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2"/>
        </Border.Effect>
        <Button FontSize="20" FontWeight="Bold" Cursor="Hand" Background="#FFDFD991"
        Foreground="Black" VerticalAlignment="Stretch" Click="hyperlink_Click"> 
            JOIN
        </Button>
    </Border>
    
    <Border Margin="10" Background="White"  Grid.Column="1" Grid.Row="3">
        <Border.Effect>
              <DropShadowEffect ShadowDepth="2"/>
        </Border.Effect>
        <Button Cursor="Hand" Background="#FFDFD991" FontWeight="Bold" FontSize="20" Grid.Column="1" Grid.Row="3">CREATE GAME</Button>
    </Border>

</Grid>

</Page>